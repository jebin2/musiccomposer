{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "musiccomposer",
	"version": "0.1.0",
	"identifier": "com.musiccomposer.app",
	"build": {
		"beforeBuildCommand": "node build_setup.js",
		"frontendDist": "../src"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "Text Tunes",
				"width": 1280,
				"height": 720,
				"backgroundColor": "#000000",
				"theme": "Dark",
				"decorations": true,
				"transparent": true,
				"center": true,
				"devtools": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"resources": [
			"bin/dependency/**/*"
		],
		"windows": {
			"webviewInstallMode": {
				"type": "downloadBootstrapper"
			}
		}
	}
}