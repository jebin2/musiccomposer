{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "musiccomposer",
	"version": "0.1.0",
	"identifier": "com.musiccomposer.app",
	"build": {
		"beforeBuildCommand": "node build_setup.js",
		"frontendDist": "../src"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "musiccomposer",
				"width": 1280,
				"height": 720,
				"backgroundColor": "#000000",
				"theme": "Dark",
				"decorations": true,
				"transparent": true,
				"center": true,
				"devtools": true
			}
		],
		"security": {
			"csp": "default-src 'self' customprotocol: asset:; connect-src ipc: http://ipc.localhost; font-src https://fonts.gstatic.com; img-src 'self' asset: http://asset.localhost blob: data:; style-src 'unsafe-inline' 'self' https://fonts.googleapis.com; media-src 'self' asset: http://asset.localhost;",
			"assetProtocol": {
				"enable": true,
				"scope": [
					"$HOME/**",
					"/tmp/musiccomposer/**",
					"/**"
				]
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"resources": [
			"bin/dependency/**/*"
		],
		"windows": {
			"webviewInstallMode": {
				"type": "downloadBootstrapper"
			}
		},
		"linux": {
			"appimage": {
				"bundleMediaFramework": true,
				"files": {}
			},
			"deb": {
				"files": {}
			},
			"rpm": {
				"epoch": 0,
				"files": {},
				"release": "1"
			}
		}
	}
}